{% extends 'base.html.twig' %}


{% block body %}
    <div class="container mt-4 bg-dark" >
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header ">
                        <h1 class="text-warning">Profil de l'utilisateur</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form'}}) }}
                        <div class="mb-3">
                            {{ form_row(form.nom, {'label': 'Nom :', 'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.prenom, {'label': 'Prénom :', 'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.email, {'label': 'Email :', 'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.adresse, {'label': 'Adresse :', 'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.telephone, {'label': 'Téléphone :', 'attr': {'class': 'form-control'}}) }}
                        </div>
                        <button type="submit" class="btn btn-warning">Enregistrer</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
            </div>
        </div>
        <div class="container-fluid bg-dark py-5 ">
        <div class="col-sm-12 text-center py-5 text-warning bg-dark ">
            <a type="button" class="btn btn-warning" href="{{'/'}}">Retour page accueil</a>
        </div>
    </div>
    </div>
{% endblock %}
