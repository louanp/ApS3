        <div class="col-sm-12 text-center  py-5 text-warning bg-dark  ">
            <h2>Suivis de votre colis</h2>
        </div>
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10">
                <div class="progress" style="width:100%">
                    <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:25%">
                       Commande en préparation
                    </div>
                </div>
            </div>
            <div class="col-sm-1"></div>
        </div>
        <div class="row">
            <div class="col-sm-3 text-center my-5 ">
                <img id="img" src="{{ asset('images/preparation.jpg') }}" alt="preparation"/>
                <h4 class="text-warning">Préparation du colis</h4>
            </div>
            <div class="col-sm-3 text-center my-5">
                <img id="img" src="{{ asset('images/envoye.png') }}" alt="Envoye"/>
