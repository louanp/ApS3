{% extends 'base.html.twig' %}

{% block title %}Page suivis colis{% endblock %}
{% block header %}
{% endblock %}

{% block body %}
{%if lacommande.getId() == null%}
    <div class="col-sm-12 text-center  py-5 text-warning bg-dark  ">
        <h1>La commande n'existe pas </h1>
    </div>
{%endif%}
{% if lacommande.getEtat() == 1  %}
