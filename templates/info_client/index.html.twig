{% extends 'base.html.twig' %}

{% block title %}Information Client{% endblock %}


{% block body %}
<div class='container-fluid bg-dark py-5'>
    <div class="row">
        <div class="col-sm-12 bg-dark text-center py-2 my-2">
            <h2 class="text-warning">Liste de tous les clients</h2>
        </div> 
        <div class="col-sm-12 bg-dark text-center py-5 my-3 ml-5 mr-5">          
            <table class="table ">
                <thead>
                    <tr class="warning">
                    <th>ID</th>
                    <th>Prenom</th>
                    <th>Nom</th>
                    <th>Mail</th>
                    <th>Adresse</th>
                    <th>Téléphone</th>
                    </tr>
                </thead>
                <tbody>
                    {% for leclient in lesclient %}
                    <tr class="warning">
                        <td>{{ leclient.id }}</td>
                        <td>{{ leclient.prenom }}</td>
                        <td>{{ leclient.nom}}</td>
                        <td>{{ leclient.email}}</td>
                        <td>{{ leclient.adresse}}</td>
                        <td>{{ leclient.telephone}}</td>
                    </tr>   
                    
                {% endfor %}
                </tbody>

            </table>
        </div>   
    </div>
</div>



{% endblock %}
