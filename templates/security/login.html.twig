{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div id="un" class="container-fluid bg-dark ">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a  type="button" class="btn btn-warning" href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <div id="un" class="container-fluid bg-dark py-2">
            <div class="row bg-dark">
                <h1 class="h3 text-center  py-5 text-warning font-weight-normal">Connexion</h1>
            </div>
            <div class="d-flex justify-content-center mb-3 bg-dark">
                <div class="row bg-dark">
                    <label class="text-warning py-3 text-center" for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control style="width:100px" autocomplete="email" required autofocus>
                    <label class="text-warning py-3 text-center" for="inputPassword">Mot de passe </label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >
                </div>
            </div>
                <div class="d-flex justify-content-center mt-3 mb-5 py-5 ">
                    <div class="btn-group-vertical-right p-3 mt-3 mr-3 ">
                        <button class="btn btn-lg btn-warning " type="submit">
                            Connexion
                        </button>
                        <a type="button" class="btn btn-lg btn-warning" href="{{'/mdpOublie'}}">Mot de passe oublier</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}
